{
  "manifest_version": 3,
  "name": "Teams Recorder",
  "version": "1.0",
  "description": "Record Teams meetings with video + audio",
  "permissions": [
    "tabs",
    "tabCapture",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://*.teams.microsoft.com/*",
    "https://*.teams.live.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}